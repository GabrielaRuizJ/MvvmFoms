<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmValidation.SignUp">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Label Text="{Binding LblUsuario}"/>
            <Entry Text="{Binding EnUsuario}"/>
            <Label Text="{Binding LblContraseña}"/>
            <Entry Text="{Binding EnContraseña}" IsPassword="{Binding Password}}"/>

            <Label Text="{Binding Mensaje}" IsEnabled="{Binding IsEnable}"/>
            <Button/>
        </StackLayout>
    </ScrollView>
</ContentPage>